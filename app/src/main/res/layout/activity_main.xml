<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizonhanzi.MainActivity">

    <TextView
        android:id="@+id/testedOn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quizTopic"
        android:textSize="@dimen/QuestionSize"
        app:layout_constraintBottom_toTopOf="@id/testedOn2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/testedOn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quizTopic2"
        android:textSize="@dimen/HanziSize"
        android:textColor="@color/BlackForHanzi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startQuiz"
        android:text="@string/startButton"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testedOn2"
        app:layout_constraintVertical_bias="0.66" />

</android.support.constraint.ConstraintLayout>
